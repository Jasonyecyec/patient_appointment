    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new object { }, new { @class = "nav-link active" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new object { }, new { @class = "nav-link" })
                    </li>

                    @if (Session["name"] == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Sign up", "SignUp", "User")
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "User")
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("UserProfile","User")"> <img src="@Session["userPhoto"]" alt="Alternate Text" class="user-photo" /> Hi! @Session["name"]</a>
                        </li>
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
